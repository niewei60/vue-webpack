@import '~@common/assets/css/define.styl';
.p-put-forward {
	height: 100%;
	background: #16112e;
	.p-title {
		width: 100%;
		height: 6.92rem;
		> img {
			width: 100%;
			height: 100%;
		}
		> div {
			position: absolute;
			width: 100%;
			top: 0;
			padding-top: 1.4rem;
			text-align: center;
			color: #fff;
			> p:nth-child(1) {
				font-size: .75rem;
			}
			> p:nth-child(2) {
				font-size: 2rem;
				font-weight: 900;
			}
			> p:nth-child(3) {
				font-size: .75rem;
				text-align: right;
				padding-top: 1rem;
				padding-right: .5rem;
				>img{
					width: .6rem;
					height: .6rem;
					margin-left: .5rem;
				}
			}
		}

	}
	.p-content {
		background: #211c37;
		> div {
			text-align: center;
			padding: .1rem 1.73rem;
			> p {
				margin-top: .92rem;
				border: 1Px solid #fff;
				>input {
					width: 90%;
					color: #fff;
					margin: .6rem;
					background: #211c37;
					border: none;

				}
			}
			> p:last-child {
				border: none;
				margin: 2rem 0;
				>button{
					width: 100%;
					height: 3rem;
					color: #fff;
					border-radius: 1.5rem;
					border: 1Px solid #4d3ba4;
					background: #4d3ba4;
				}
			}
		}
	}
	.p-explain {
		background: #16112e;
		color: #fff;
		> p {
			padding-left: .5rem;
			padding-top: 1rem;
		}
		> ul {
			line-height: 1.1rem;
			li {
				color: #ccc;
				padding-left: .5rem;
				padding-right: 1rem;
				font-size: .75rem;
			}
		}
	}
}